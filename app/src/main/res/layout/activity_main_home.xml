<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FAE954"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:layout_gravity="left">

        </TextView>

        <ScrollView
            android:layout_width="293dp"
            android:layout_height="190dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="150dp"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/game1" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_1" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_2" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_3" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_4" />


            </LinearLayout>

        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="Category"
            android:textSize="30dp"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/horror"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="horror">

                    </Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Fight">

                    </Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Survival">

                    </Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Adventure">

                    </Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Thriller">

                    </Button>


                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="179dp"
                        android:layout_height="180dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/img_6" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="181dp"
                            android:layout_height="68dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Tekken 3 "
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <Button
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="155dp"
                            android:layout_height="58dp"
                            android:id="@+id/tekken"

                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="46dp"
                            android:layout_marginBottom="39dp"
                            android:background="@android:drawable/alert_dark_frame"
                            android:text="Click Here For Review"
                            android:textAlignment="center">

                        </Button>
                    </RelativeLayout>


                </TableRow>

                <!-- Row 1 -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Text Column -->
                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="180dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/bat1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="181dp"
                            android:layout_height="68dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Batman"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <Button

                            android:layout_width="155dp"
                            android:layout_height="58dp"

                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="46dp"
                            android:layout_marginBottom="39dp"
                            android:background="@android:drawable/alert_dark_frame"
                            android:text="Click Here For Review"
                            android:textAlignment="center">

                        </Button>
                    </RelativeLayout>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Text Column -->
                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="180dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/spiderman" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="181dp"
                            android:layout_height="68dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Spiderman Friend or Foe"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <Button

                            android:layout_width="155dp"
                            android:layout_height="58dp"
                            android:layout_below="@+id/textView5"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="46dp"
                            android:layout_marginBottom="39dp"
                            android:background="@android:drawable/alert_dark_frame"
                            android:text="Click Here For Review"
                            android:textAlignment="center">

                        </Button>
                    </RelativeLayout>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Text Column -->
                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="180dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/img_5" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv11"
                            android:layout_width="181dp"
                            android:layout_height="68dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Tekken 7"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <Button

                            android:layout_width="155dp"
                            android:layout_height="58dp"
                            android:layout_below="@+id/tv11"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="46dp"
                            android:layout_marginBottom="39dp"
                            android:background="@android:drawable/alert_dark_frame"
                            android:text="Click Here For Review"
                            android:textAlignment="center">

                        </Button>
                    </RelativeLayout>
                </TableRow>
            </TableLayout>
        </ScrollView>


    </LinearLayout>
</LinearLayout>